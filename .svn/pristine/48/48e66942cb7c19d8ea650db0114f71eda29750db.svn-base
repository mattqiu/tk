<script>
    $(function(){
        $('input[name=doc_submit]').click(function(){
           
			var $t = $(this);
						
			$t[0].disabled=true;
			$.ajax({
                type:'POST',
                url: '/admin/supplier/do_add',
                data: $('form').serialize(),
                dataType: "json",
                success: function (data) {
                    if(data.error) {
						$().message(data.msg);						
					}else {
						$().message(data.msg,1);
						$('form')[0].reset();
						
						window.setTimeout(function(){
							window.location.reload();
						},3000);
					}
					$t[0].disabled=false;
                }
            });
			
        });
		
    });

</script>
